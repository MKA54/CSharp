<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowsStyle">
        <Setter Property="Control.Background" Value="White" />
    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WindowsStyle}">
        <Setter Property="Menu.Foreground" Value="Black" />
    </Style>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource WindowsStyle}">
        <Setter Property="ToolBar.Foreground" Value="Black" />
    </Style>
    <Style x:Key="ComboBoxStyle" BasedOn="{StaticResource WindowsStyle}">
        <Setter Property="ComboBox.Foreground" Value="Black" />
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowsStyle}">
        <Setter Property="TextBox.BorderBrush" Value="Black" />
        <Setter Property="TextBox.Padding" Value="5" />
    </Style>
</ResourceDictionary>