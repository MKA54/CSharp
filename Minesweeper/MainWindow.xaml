<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Padding="5" FontSize="16">Уровень сложности</TextBlock>
            <ComboBox x:Name="difficultyLevel" Padding="5" SelectedIndex="0" SelectionChanged="ComboBox_Selected">
                <ComboBox.ItemsSource>
                    <StaticResource ResourceKey="LevelsList"></StaticResource>
                </ComboBox.ItemsSource>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
